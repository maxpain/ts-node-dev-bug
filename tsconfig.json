{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "esnext",
		"lib": [
			"esnext"
		],
		"types": [
			"node"
		],
		"outDir": ".build",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"skipLibCheck": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*"
	],
}
